<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
(ISBLANK( Phone_Number__c )),
NOT(REGEX( Phone_Number__c ,&quot;[+91]{3}[1-9]{1}[0-9]{9}&quot;))
)</errorConditionFormula>
    <errorMessage>Please entered Phone number in correct format.(eg:+91 1234567890)</errorMessage>
</ValidationRule>

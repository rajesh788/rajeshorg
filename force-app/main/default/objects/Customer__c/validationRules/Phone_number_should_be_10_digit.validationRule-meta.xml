<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_number_should_be_10_digit</fullName>
    <active>true</active>
    <description>Phone number should be 10 digits</description>
    <errorConditionFormula>NOT(REGEX(Phone__c , &quot;[0-9+\\-\\(\\)\\s]*&quot;))</errorConditionFormula>
    <errorMessage>Phone number should be 10 digits</errorMessage>
</ValidationRule>

    <alerts>
        <fullName>Salary_Update</fullName>
        <ccEmails>ankur@crmlanding.in</ccEmails>
        <ccEmails>rajeshnama1993@gmail.com</ccEmails>
        <description>Salary Update</description>
        <protected>false</protected>
        <recipients>
            <recipient>rajeshnama@sfdc.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Salary_Update</template>
    </alerts>
    <alerts>
        <fullName>TA_Allowance_Info</fullName>
        <ccEmails>ankur@crmlanding.in</ccEmails>
        <ccEmails>rajeshnama1993@gmail.com</ccEmails>
        <description>TA Allowance Info</description>
        <protected>false</protected>
        <recipients>
            <recipient>rajeshnama@sfdc.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/TA_Allowance</template>
    </alerts>
    <fieldUpdates>
        <fullName>Location_Changed</fullName>
        <field>Office_Location__c</field>
        <formula>&quot;Jodhpur&quot;</formula>
        <name>Location Changed</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>3rd Criteria Check22</fullName>
        <actions>
            <name>TA_Allowance_Info</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Workflow_Object__c.Salary__c</field>
            <operation>greaterOrEqual</operation>
            <value>20000</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Bonus according to salary</fullName>
        <actions>
            <name>Bonus_Update</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Workflow_Object__c.Salary__c</field>
            <operation>notEqual</operation>
            <value>5000</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Location change according to salary</fullName>
        <actions>
            <name>Location_Changed</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Workflow_Object__c.Salary__c</field>
            <operation>greaterThan</operation>
            <value>25000</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Salary</fullName>
        <actions>
            <name>Salary_Update</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Workflow_Object__c.Salary__c</field>
            <operation>greaterOrEqual</operation>
            <value>5000</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
